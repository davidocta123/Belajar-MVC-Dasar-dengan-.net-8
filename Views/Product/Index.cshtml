@model IEnumerable<ECommerceApp.Models.Product>

@{
    ViewData["Title"] = "Data Product";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Data Product</h2>

    <a asp-action="Create" class="btn btn-primary">
        Tambah Product
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-dark text-center">
                <tr>
                    <th style="width:110px;">Gambar</th>
                    <th>Nama Produk</th>
                    <th style="width:130px;">Harga</th>
                    <th>Deskripsi</th>
                    <th style="width:230px;">Aksi</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <!-- GAMBAR -->
                        <td class="text-center">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="~/images/products/@item.ImageUrl" class="rounded shadow-sm"
                                    style="height:70px; object-fit:cover;" />
                            }
                            else
                            {
                                <div class="text-muted small fst-italic">
                                    No Image
                                </div>
                            }
                        </td>

                        <!-- NAMA -->
                        <td>
                            <div class="fw-semibold">@item.Name</div>
                        </td>

                        <!-- HARGA -->
                        <td class="text-end fw-semibold text-success">
                            @item.Price.ToString("C")
                        </td>

                        <!-- DESKRIPSI -->
                        <td>
                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                <span>
                                    @(item.Description.Length > 90
                                                                ? item.Description.Substring(0, 90) + "..."
                                                                : item.Description)
                                </span>
                            }
                            else
                            {
                                <span class="text-muted fst-italic">
                                    Tidak ada deskripsi
                                </span>
                            }
                        </td>

                        <!-- AKSI -->
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">
                                    Detail
                                </a>

                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">
                                    Edit
                                </a>

                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                    Hapus
                                </a>
                            </div>
                        </td>
                    </tr>
                }

                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">
                            ðŸ“­ Belum ada produk
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>