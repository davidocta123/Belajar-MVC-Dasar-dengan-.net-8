@model IEnumerable<BootcampMvp.Models.Attendance>

<h2 class="mb-3">Data Attendance</h2>

<a asp-action="Create" class="btn btn-primary mb-3">
    Tambah Attendance
</a>

<table class="table table-striped table-bordered shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Tanggal</th>
            <th>Nama Siswa</th>
            <th>Status</th>
            <th style="width: 180px;">Aksi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToString("dd MMM yyyy")</td>
                <td>@item.Student?.Name</td>
                <td>
                    @switch (item.Status)
            {
                case "Hadir":
                    <span class="badge bg-success">Hadir</span>
                    break;
                case "Izin":
                    <span class="badge bg-warning text-dark">Izin</span>
                    break;
                case "Alpha":
                    <span class="badge bg-danger">Alpha</span>
                    break;
            }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1">Detail</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Hapus</a>
                </td>
            </tr>
        }
    </tbody>
</table>