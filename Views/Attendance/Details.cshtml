@model BootcampMvp.Models.Attendance

@{
    ViewData["Title"] = "Detail Attedance";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">Detail Attedance</h4>
            </div>

            <div class="card-body">
                <dl class="row mb-4">
                    <dt class="col-sm-4">Nama Siswa</dt>
                    <dd class="col-sm-8 fw-semibold">
                        @Model.Student?.Name
                    </dd>

                    <dt class="col-sm-4">Tanggal</dt>
                    <dd class="col-sm-8">
                        @Model.Date.ToString("dd MMM yyyy")
                    </dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        @if (Model.Status == "Hadir")
                        {
                            <span class="badge bg-success">Hadir</span>
                        }
                        else if (Model.Status == "Izin")
                        {
                            <span class="badge bg-warning text-dark">Izin</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Alpha</span>
                        }
                    </dd>
                </dl>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        ← Kembali
                    </a>

                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                            ✏️ Edit
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>